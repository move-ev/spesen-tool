# This is an example .env file. Copy the contents of this file to 
# a local `.env` file and fill out the variables with your values

# Better Auth
BETTER_AUTH_SECRET="YOUR_BETTER_AUTH_SECRET"
BETTER_AUTH_URL="http://localhost:3000" 

# Microsoft Social Provider
MICROSOFT_CLIENT_ID="YOUR_MICROSOFT_CLIENT_ID"
MICROSOFT_CLIENT_SECRET="YOUR_MICROSOFT_CLIENT_SECRET"
MICROSOFT_TENANT_ID="YOUR_MICROSOFT_TENANT_ID"

# Encryption key for sensitive data (banking details)
# Secure fields like iban and full name are encrypted using AES-256-GCM which requires a 32 byte key.
# Generate with: openssl rand -base64 32
SECRET_ENCRYPTION_KEY="YOUR_SECRET_ENCRYPTION_KEY"

# Prisma
# https://www.prisma.io/docs/reference/database-reference/connection-urls#env
DATABASE_URL="postgresql://postgres:postgres@127.0.0.1:5435/spesen_tool"

